<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="event">
    <div class="field">
      <%= f.label :name, "Название" %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :desc, "Описание" %>
      <%= f.text_area :desc %>
    </div>
    <div class="field datetime_select">
      <%= f.label :start_date, "Начало" %>
      <%= f.datetime_select :start_date, order: [:day, :month, :year, :hour, :minute] %>
    </div>
  </div>

  <%= f.fields_for :game do |gam| %>

    <%= render "games/form", f: gam, game: @event.game %>

  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
