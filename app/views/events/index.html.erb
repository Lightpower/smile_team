<h1>Новости</h1>

<div>
  <% if can? :manage, Event %>
    <%= link_to 'Новое событие', new_event_path, class: "nav_button" %>
  <% end %>
</div>

<% @events.each do |event| %>
  <% if event.event_type == "Game" %>
    <% if can? :read, event %>
      <%= render "games/game", event:  event %>
    <% end %>
  <% end %>
<% end %>