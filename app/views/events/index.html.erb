<h1>Новости</h1>

<div>
  <% if can? :manage, Event %>
    <%= link_to 'Новое событие', new_event_path %>
  <% end %>
</div>

<% @events.each do |event| %>
  <% if event.type == "Game" %>
    <% if can? :read, event %>
      <%= render "games/game", locals: { event:  event } %>
    <% end %>
  <% end %>
<% end %>