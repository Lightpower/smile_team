<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Role</th>
    <th>Email</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Birthday</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.role %></td>
    <td><%= user.email %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.birthday %></td>
    <td><%= link_to 'Смотреть', user_path(user) %></td>
    <td><%= link_to 'Править', edit_user_path(user) %></td>
    <td><%= link_to 'Удалить', user_path(user), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

