<h1>Список пользователей</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Логин</th>
      <th>Роль на сайте</th>
      <th>Роль в команде</th>
      <th>Email</th>
      <th>Имя</th>
      <th>Фамилия</th>
      <th>День рожения</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= user.login %></td>
      <td><%= user.site_role %></td>
      <td><%= user.team_role %></td>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.birthday %></td>
      <td><%= link_to 'Смотреть', user_path(user), class: "action_button" if can? :read, user %></td>
      <td><%= link_to 'Править', edit_user_path(user), class: "action_button" if can? :manage, user %></td>
      <td><%= link_to 'Удалить', user_path(user), confirm: 'Точно удаляем?', method: :delete, class: "action_button" if can? :manage, user %></td>
    </tr>
  </tbody>
<% end %>
</table>

<br />

<%= link_to 'Новый пользователь', new_user_path, class: "action_button" if can? :manage, User %>
