<h1>Список пользователей</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Логин</th>
      <th>Роль</th>
      <th>Email</th>
      <th>Имя</th>
      <th>Фамилия</th>
      <th>День рожения</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= user.login %></td>
      <td><%= user.role %></td>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.birthday %></td>
      <td><%= link_to 'Смотреть', user_path(user) %></td>
      <td><%= link_to 'Править', edit_user_path(user) %></td>
      <td><%= link_to 'Удалить', user_path(user), confirm: 'Точно удаляем?', method: :delete %></td>
    </tr>
  </tbody>
<% end %>
</table>

<br />

<%= link_to 'Новый пользователь', new_user_path, class: "button" %>
